  body
    div.container
      h1.header My ToDo List
      form.form_control.form-group(
        method='Post',
        action="/todos/edit/"+item._id
      )

        input.search.form-control(
          type='text'
          name='search'
          value = item.todo
          placeholder='Add ToDo'
      )
        button.btn(
          type:'submit'
        ) Add Item
      
