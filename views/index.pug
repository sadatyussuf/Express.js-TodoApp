doctype html
html(lang='en')
  head
    title ToDoAPP with Node&Express
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">


    link(rel="stylesheet", href="style.css")
  body
    div.container-fluid
      .navbar 
        .leftside 
          img(src="./imgs/t.jpg ", alt="small logo of T")
          h2 Todo App 

        .rightside 
          h3 Sadat
          
      main 
        aside 
          h2 Tasks Managment 
          .allTask
            .border
              img(src="./imgs/test.svg", alt="a task manager icon")
              span All Tasks

          .allTask
            .border  
              img(src="./imgs/briefcase.svg", alt="the progress icon")
              span In Progress

          .allTask
            .border  
              img(src="./imgs/checklist.svg", alt="a checklist icon")
              span Completed

          .allTask
            .border  
              img(src="./imgs/number-zero.svg", alt="a number zero icon")
              span Today

          .allTask
            .border  
              img(src="./imgs/number-one.svg", alt="a number one icon")
              span Tommorow

          .allTask
            .border
              img(src="./imgs/month-end.svg", alt="month icon")
              span Month

        section
          header 
            .title 
              h2 All Task 
              span (0)
            .addtask 
              //- img(src="./imgs/plus.svg", alt="a plus icon")
              button  + New Task
            
          .active
            button.img_close
              img(src="./imgs/close.svg", alt="a close icon")

            form.form-container(action="", method="post") 

              div.title-form.form
                label(for="title") Title
                input#title.input(
                  type="text"
                  name="title"
                  placeholder="What needs to be done")

              div.desc-form.form
                label(for="desc") Description
                textarea#desc.input(
                  name="desc"
                  cols="30"
                  rows="10"
                  placeholder="Description about this task") 

              div.date-form.form
                label(for="date") Date picker
                input#date.input(type="date", name="date")

              div.options-form.form
                label(for='important') Important
                - const Options = [{value: 'Low'}, {value: 'Medium'}, {value: 'High'}]
                select#important.input(name='important' size='3')
                  each option in Options
                    option(value=(option.value)) #{option.value} 
              div.submit 
                button(type="submit") Add New Task
            

          


